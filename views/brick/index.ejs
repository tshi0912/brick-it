<div class="container">
    <div class="page-header clearfix">
        <div class="pull-left">
            <h5>All Bricks</h5>
        </div>
        <div class="pull-right">
            <div class="btn-group">
                <a class="btn btn-default" href="javascript:void(0);"><i class="fa fa-times"></i></a>
                <a class="btn btn-default" href="/brick/edit"><i class="fa fa-plus"></i></a>
            </div>
        </div>
    </div>
    <table id="bricks-table" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
        <tr>
            <th></th>
            <th>App</th>
            <th>Title</th>
            <th>Created By</th>
            <th>Created Date</th>
        </tr>
        </thead>
    </table>
</div>
<script>
    $(function () {
        var bricks_table = $('#bricks-table').dataTable({
            "processing": true,
            "serverSide": true,
            "ajax": {
                "url": "/datatables/bricks",
                "type": "POST"
            },
            order: [
                [4, 'desc']
            ],
            columnDefs: [
                {
                    targets: '_all',
                    defaultContent: ''
                }
            ],
            "columns": [
                {
                    render: function(data, type, row){
                        return '<label><input type="checkbox"></label>';
                    },
                    orderable: false,
                    className: 'check'
                },
                {
                    render: function(data, type, row){
                        return '<a class="app-link" href="javascript:void(0);" >' + row.app + '</a>';
                    }
                },
                { "data": "title" },

                {
                    render: function(data, type, row){
                        return '<a class="user-link" href="javascript:void(0);" >' + row.createdByNickName + '</a>';
                    }
                },
                { "data": "createdAt" }
            ]
        }).on('click', '.app-link', function(e){
            e.stopPropagation();
            var name = $.trim($(this).text());
            $.getJSON('/apps/'+name)
                    .done(function(app){
                        $('#app-detail-modal').data('app', app)
                                .modal('show');
                    });
        }).on('click', '.user-link', function(e){
            e.stopPropagation();
            var name = $.trim($(this).text());
            $.getJSON('/users/'+name)
                    .done(function(user){
                        $('#user-detail-modal').data('user', user)
                                .modal('show');
                    });
        }).on('click','td', function(e){
            if($(this).hasClass('.dataTables_empty') ||
                    $(e.target).is('input[type="checkbox"]')){
                e.stopPropagation();
            }
            if($(e.target).is("label")){
                e.preventDefault();
                var ele = $(e.target).find('input');
                if(ele.is(':checked')){
                    ele.prop('checked', false);
                }else{
                    ele.prop('checked', true);
                }
                $(this).parents('tr').toggleClass('selected');
                e.stopPropagation();
            }
            if($(e.target).is('input[type="checkbox"]')){
                $(this).parents('tr').toggleClass('selected');
            }
        }).on('click','tbody > tr', function(e){
            var brick = bricks_table.row($(this)).data();
            $('#brick-detail-modal').data('brick', brick)
                    .modal('show');
        }).api();

        $('.btn-group .btn:first-child').on('click', function(){
            var selecteds = bricks_table.rows('.selected').data(),
                ids = [];
            _.each(selecteds, function(item){
                ids.push(item.id);
            });
            $.ajax({
                url : '/brick',
                type: 'delete',
                data: {ids: ids}
            }).done(function(result){
                if(result.ok) {
                    bricks_table.draw(false);
                }
            });
        });
    });
</script>

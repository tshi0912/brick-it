<div class="container" style="margin-top: 150px">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="panel panel-default">
                <div class="panel-heading">Sign In</div>
                <div class="panel-body">
                    <% if( typeof errors != 'undefined' && errors.length != 0) { %>
                    <div class="alert alert-danger" role="alert">
                        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span
                                    class="sr-only">Close</span></button>
                        <ul>
                            <% for(var i = 0; i < errors.length; i++) { %>
                            <li><%= errors[i] %></li>
                            <% } %>
                        </ul>
                    </div>
                    <% } %>
                    <form class="form-horizontal" role="form" action="/signin" method="post">
                        <div class="form-group">
                            <label for="nickName-input" class="col-sm-2 control-label"><h4>Nick Name</h4></label>

                            <div class="col-sm-10">
                                <input type="text" class="form-control input-lg" id="nickName-input" name="nickName"
                                       placeholder="Only letter and number allowed">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="password-input" class="col-sm-2 control-label"><h4>Password</h4></label>

                            <div class="col-sm-10">
                                <input type="password" class="form-control input-lg" id="password-input" name="password"
                                       placeholder="At lease 6 letters">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-primary btn-lg btn-block">Sign In</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(function () {
        $(".alert").alert();
    });
</script>
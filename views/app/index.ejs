<div class="container">
    <div class="page-header clearfix">
        <div class="pull-left">
            <h5>All Apps</h5>
        </div>
        <div class="pull-right">
            <a class="btn btn-primary" href="/app/edit"><i class="fa fa-plus"></i> Create App</a>
        </div>
    </div>
    <table id="apps-table" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
        <tr>
            <th></th>
            <th>Name</th>
            <th>Domain</th>
            <th>Owner</th>
            <th>Created Date</th>
        </tr>
        </thead>
    </table>
</div>
<script>
    $(function () {
        var apps_table = $('#apps-table').dataTable({
            "processing": true,
            "serverSide": true,
            "ajax": {
                "url": "/datatables/apps",
                "type": "POST"
            },
            order: [
                [4, 'desc']
            ],
            "columns": [
                {
                    render: function(data, type, row){
                        return '<label><input type="checkbox"></label>';
                    },
                    orderable: false,
                    className: 'check'
                },
                { "data": "name" },
                { "data": "domain" },
                { "data": "owner" },
                { "data": "createdAt" }
            ]
        }).on('click','td', function(e){
            if($(this).find('input[type="checkbox"]').length != 0 ||
                    $(this).hasClass('.dataTables_empty')){
                e.stopPropagation();
            }
        }).on('click','tbody > tr', function(e){
            var app = apps_table.row($(this)).data();
            $('#app-detail-modal').data('app', app)
                    .modal('show');
        }).api();
    });
</script>
